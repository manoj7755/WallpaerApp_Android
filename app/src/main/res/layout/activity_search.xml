<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ActivityClass.SearchActivity">
    <TextView
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Something"
        android:textSize="@dimen/_25sdp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/search_content_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_text"
        android:text="Shing"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="@dimen/_18sdp"
     />
    <TextView
        android:id="@+id/search_content_available_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_text"
        android:layout_toRightOf="@id/search_content_available"
        android:text="Shing"
        android:layout_marginStart="@dimen/_5sdp"
        android:textSize="@dimen/_18sdp"
        />
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycleViewOfSearch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/search_content_available_text"
    />
</RelativeLayout>